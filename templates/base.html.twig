<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}

			<link href="{{ asset('./bootstrap/css/bootstrap.css') }}" rel="stylesheet"/>
			<link href="{{ asset('./css/style.css') }}" rel="stylesheet"/>
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			<script src="{{ asset('./bootstrap/js/bootstrap.js') }}"></script>
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-dark bg-dark navbar-expand-lg">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{path('home')}}">Thirsty App</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="{{ app.request.get('_route') == 'home' ? 'active' }} nav-link" href="{{path('home')}}">Accueil</a>
						</li>
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="{{ app.request.get('_route') == 'admin' ? 'active' }} nav-link" href="{{path('admin')}}">Espace Admin</a>
							</li>
						{% endif %}
					</ul>
					<div class="d-flex">
						{% if is_granted('ROLE_ADMIN') %}
							<a class="btn btn-outline-info" href="{{path('app_logout')}}">Se déconnecter</a>
						{% else %}
							<a class="btn btn-outline-info" href="{{path('app_login')}}">Se connecter</a>
						{% endif %}
					</div>
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}
	</body>
</html>
